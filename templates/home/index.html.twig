{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-7">
            <h2>Lift History</h2>
            <table class="table table-striped table-inverse">
                <thead class="thead-inverse">
                <tr>
                    <th>What</th>
                    <th>How many times?</th>
                    <th>weight</th>
                </tr>
                </thead>
                <tbody>
                {% for log in logs %}
                    <tr>
                        <td>{{ log.item }}</td>
                        <td>{{ log.reps }}</td>
                        <td>{{ log.totalWeightLifted }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-5">

        </div>
    </div>
{% endblock %}
