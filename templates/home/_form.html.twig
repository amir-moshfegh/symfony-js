<form
        name="rep_log"
        method="post"
        class="form-inline js-form-submit"
        novalidate
        data-url="{{ path('api_new') }}"
>

    <div class="form-group">
        <label class="sr-only required" for="rep_log_item">Item</label>
        <select id="rep_log_item"
                name="item"
                required="required"
                class="form-control">
            <option value="" selected="selected">What did you lift?</option>
            <option value="cat">Cat</option>
            <option value="fat_cat">Fat Cat</option>
            <option value="laptop">Laptop</option>
            <option value="coffee_cup">Coffee Cup</option>
        </select></div>

    <div class="form-group">
        <label class="sr-only required" for="rep_log_reps">Reps</label>
        <input type="number"
               id="rep_log_reps"
               name="reps"
               required="required"
               placeholder="How many times?"
               class="ml-2 form-control">
    </div>
    <button class="ml-2 btn btn-success"> I Lifted it!</button>
</form>